<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="259dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_signin_dialog_bg" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/icon_signin_close" />

    <TextView
        android:id="@+id/tv_sigin_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        tools:text="已连续签到2天，签到奖励金币"
        android:textColor="#ffffffff"
        android:textSize="11sp" />

    <com.marksixinfo.widgets.SiginDialogCurrentView
        android:layout_marginTop="83dp"
        android:id="@+id/siginCurrentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_sigin_current_day"
        android:layout_width="154dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>