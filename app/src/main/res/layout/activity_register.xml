<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title_white" />


    <com.marksixinfo.widgets.MySmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/line_vertical"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="28dp"
                        android:src="@drawable/icon_register_user" />


                    <com.marksixinfo.widgets.CleanEditTextView
                        android:id="@+id/edit_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入昵称"
                        android:maxLines="1"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#bcbcbc"
                        android:textSize="16dp" />

                </LinearLayout>

                <View style="@style/line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="28dp"
                        android:src="@drawable/icon_register_photo" />


                    <com.marksixinfo.widgets.CleanEditTextView
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="11"
                        android:hint="请输入注册的手机号码"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#bcbcbc"
                        android:textSize="16dp" />

                </LinearLayout>

                <View style="@style/line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="28dp"
                        android:src="@drawable/icon_register_password" />


                    <com.marksixinfo.widgets.CleanEditTextView
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#bcbcbc"
                        android:textSize="16dp" />

                </LinearLayout>

                <View style="@style/line_vertical" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="28dp"
                        android:src="@drawable/icon_register_auth_code" />


                    <com.marksixinfo.widgets.CleanEditTextView
                        android:id="@+id/edit_auth_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#bcbcbc"
                        android:textSize="16dp" />


                    <Button
                        android:id="@+id/tv_send_auth_code"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/selector_register_auth_code"
                        android:gravity="center"
                        android:text="短信验证码"
                        android:textSize="14dp" />


                </LinearLayout>

                <View style="@style/line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="28dp"
                        android:src="@drawable/icon_invite_code" />


                    <com.marksixinfo.widgets.CleanEditTextView
                        android:id="@+id/edit_invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入邀请码（非必填）"
                        android:maxLines="1"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="#333"
                        android:textColorHint="#bcbcbc"
                        android:textSize="16dp" />

                </LinearLayout>

                <View style="@style/line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_check_protest"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:padding="15dp"
                        android:src="@drawable/selector_register_protest" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="5dp"
                        android:text="我已阅读并同意"
                        android:textColor="#b6b6b6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_protest_webView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《“六合头条”会员服务协议》"
                        android:textColor="#445990"
                        android:textSize="13dp" />


                </LinearLayout>


                <Button
                    android:id="@+id/tv_register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_login_input2"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </com.marksixinfo.widgets.MySmartRefreshLayout>
</LinearLayout>
