<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64.5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_icon_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            tools:src="@drawable/icon_task_type1" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:textSize="17dp"
                    tools:text="首次邀请好友" />

                <TextView
                    android:id="@+id/tv_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffbc4a51"
                    android:textSize="12dp"
                    tools:text="(9/10)" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textSize="13dp"
                tools:text="首次邀请好友，奖励32元" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_get_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_task_get_gold"
            android:gravity="center"
            android:textColor="#ffbc4a51"
            android:textSize="12dp" />


    </LinearLayout>

    <View style="@style/line_vertical" />


</LinearLayout>