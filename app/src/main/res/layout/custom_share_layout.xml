<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_share_dialog_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_share_wechat_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/share_wechat_icon"
            android:gravity="center"
            android:text="微信"
            android:textColor="#333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/custom_share_friends_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/share_friends_icon"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="#333"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/custom_share_copy_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/share_copy_icon"
            android:gravity="center"
            android:text="分享链接"
            android:textColor="#333"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/custom_share_qq_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/share_qq_icon"
            android:gravity="center"
            android:text="QQ"
            android:textColor="#333"
            android:textSize="13dp"
            android:visibility="visible" />


    </LinearLayout>


    <TextView
        android:id="@+id/custom_share_cancel_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_share_dialog_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333"
        android:textSize="15dp" />

</LinearLayout>