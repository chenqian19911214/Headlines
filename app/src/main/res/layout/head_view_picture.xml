<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View style="@style/line_vertical"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_margin_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_333"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/picture_add_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/picture_view_num_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_999"
                android:drawablePadding="5dp"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/chakan_view"
                android:textSize="13sp" />


        </LinearLayout>

        <com.marksixinfo.widgets.ScaleImageView
            android:id="@+id/picture_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_image"
            android:layout_marginTop="15dp"/>

        <!--赞 和踩-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginVertical="25dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_praise"
                    style="@style/view_placeholder"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/select_praise"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#fffc5c66"
                    android:textSize="12dp"
                    tools:text="519" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:id="@+id/view_collect"
                    style="@style/view_placeholder"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/trample_on"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#EFA301"
                    android:textSize="12dp"
                    tools:text="219" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    <!--图库详情time-->



</LinearLayout>