<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <include
        android:id="@+id/view_v1"
        layout="@layout/item_lottery_head_current" />

    <include
        android:id="@+id/view_v2"
        layout="@layout/item_lottery_head_current" />

    <include
        android:id="@+id/view_v3"
        layout="@layout/item_lottery_head_current" />

    <include
        android:id="@+id/view_v4"
        layout="@layout/item_lottery_head_current" />

    <include
        android:id="@+id/view_v5"
        layout="@layout/item_lottery_head_current" />

    <include
        android:id="@+id/view_v6"
        layout="@layout/item_lottery_head_current" />


    <ImageView
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:padding="8dp"
        android:src="@drawable/icon_lottery_jiahao" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/view_v7"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">


            <LinearLayout
                android:id="@+id/ll_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="19dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_sheng_xiao"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="12dp" />


            </LinearLayout>


            <View
                android:id="@+id/view_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#bababa"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_scratch"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88898b"
                android:gravity="center"
                android:text="刮开"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>