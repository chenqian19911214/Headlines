<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.marksixinfo.widgets.bigimageViewpage.view.helper.FingerDragHelper
        android:id="@+id/fingerDragHelper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.marksixinfo.widgets.bigimageViewpage.view.helper.SubsamplingScaleImageViewDragClose
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.marksixinfo.widgets.bigimageViewpage.view.photoview.PhotoView
            android:id="@+id/gif_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </com.marksixinfo.widgets.bigimageViewpage.view.helper.FingerDragHelper>

    <com.dinuscxj.progressbar.CircleProgressBar
        android:id="@+id/progress_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:progress_background_color="@color/grey_69eee"
        app:progress_end_color="#FFFFFFFF"
        app:progress_start_color="#FFFFFFFF"
        app:progress_start_degree="-90"
        app:progress_text_color="@android:color/transparent"
        app:style="solid" />

</FrameLayout>